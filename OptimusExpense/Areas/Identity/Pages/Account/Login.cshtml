                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inregistrare</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Retrimite email de confirmare</a>
            </p>*@
                    </div>
</form>
        </section>
    </div>
    <div class="col-md-3"></div>
</div>

